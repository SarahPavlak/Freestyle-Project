import datetime
import tkinter as tk
from tkinter import *


def to_usd(my_price):
    return "${0:,.2f}".format(my_price) #https://github.com/s2t2/robo-advisor-screencast/blob/alt-solution/app/robo_advisor.py

#collect user input of desired apartment url, number of bedrooms and bathrooms
#https://docs.python.org/3/library/tkinter.html
#https://stackoverflow.com/questions/45441885/how-can-i-create-a-dropdown-menu-from-a-list-in-tkinter/45442534#45442534
#https://docs.python.org/3/library/tkinter.html
#http://effbot.org/tkinterbook/listbox.htm 

print ("Please select the number of bedrooms from the following dropdown menu:")
t = datetime.datetime.now()
print("Response recorded at: ", datetime.datetime.now().strftime("%Y-%m-%d %H:%m:%S")) #https://github.com/s2t2/shopping-cart-project/blob/master/shopping_cart.py

OPTIONS = [ 
"One bedroom",
"Two bedrooms",
"Three bedrooms",
"More than three bedrooms"
] 

master = Tk()

variable = StringVar(master)
variable.set(OPTIONS[0]) # default value

w = OptionMenu(master, variable, *OPTIONS)
w.pack()

def ok():
    print ("value is: " + variable.get())

button = Button(master, text="OK", command=ok)
button.pack()

print ("----------------")
breakpoint 

